{
  "name": "leofi_icp",
  "type": "module",
  "scripts": {
    "build": "webpack",
    "prebuild": "dfx generate",
    "start": "webpack serve --mode development --env development",
    "start:local:env": "dfx start --clean --host 127.0.0.1:8000 --use-old-metering",
    "deploy:local": ".maintain/deploy.sh",
    "deploy:ic": "dfx deploy --network=ic",
    "generate": "npm run generate:did && dfx generate leofi_icp",
    "generate:did": "npm run generate:did:backend && npm run generate:did:ts",
    "generate:did:ts": "didc bind src/leofi_icp/leofi_icp.did -t ts > src/leofi_icp/leofi_icp.did.ts",
    "generate:did:backend": "cargo build --release --target wasm32-unknown-unknown --package leofi_icp && candid-extractor target/wasm32-unknown-unknown/release/leofi_icp.wasm > src/leofi_icp/leofi_icp.did",
    "format": "cargo fmt && prettier --write .",
    "test:happy_path": "cargo test --features 'happy_path'",
    "test:sad_path": "cargo test --features 'sad_path'",
    "test": "npm run test:happy_path && npm run test:sad_path"
  },
  "dependencies": {
    "@dfinity/agent": "^1.0.1",
    "@dfinity/candid": "^1.0.1",
    "@dfinity/identity-secp256k1": "^2.0.0",
    "@dfinity/principal": "^1.0.1",
    "bip39": "^3.1.0",
    "hdkey": "^2.1.0",
    "ic0": "^0.2.8",
    "isomorphic-fetch": "^3.0.0"
  },
  "devDependencies": {
    "assert": "2.0.0",
    "buffer": "6.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.0.3",
    "events": "3.3.0",
    "html-webpack-plugin": "5.5.0",
    "prettier": "^3.2.5",
    "process": "0.11.10",
    "stream-browserify": "3.0.0",
    "terser-webpack-plugin": "^5.3.3",
    "util": "0.12.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.8.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version",
    "last 2 safari version",
    "last 2 edge version"
  ],
  "workspaces": []
}
